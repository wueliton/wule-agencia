---
import type { HTMLTag } from "astro/types";
import { ButtonStyles } from "./styles";
import type { IButtonProps } from "./types";

type Props<Tag extends HTMLTag = "button"> = IButtonProps<Tag>;

const { size, color, as: Tag = "button", ...props } = Astro.props;
---

<Tag {...props} class={ButtonStyles({ size, color })}><slot /></Tag>
